<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.gradle.intellij.plugin.gradlewrappervalidator</id>
    <name>Gradle Wrapper Validator</name>
    <vendor>Gradle Inc.</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
            serviceImplementation="org.gradle.intellij.plugin.gradlewrappervalidator.services.WrapperValidatorApplicationService"
            configurationSchemaKey="org.gradle.intellij.plugin.gradlewrappervalidator.services.WrapperValidatorApplicationService"
        />
        <projectService
            serviceImplementation="org.gradle.intellij.plugin.gradlewrappervalidator.services.WrapperValidatorService"/>
        <!--        <vfs.asyncListener-->
        <!--            implementation="org.gradle.intellij.plugin.gradlewrappervalidator.services.WrapperFileChangeListener"/>-->

        <notificationGroup id="WrapperValidationNotificationGroup"
                           displayType="BALLOON"
                           key="wrapperValidationNotificationGroupName"/>
    </extensions>

    <applicationListeners>
        <listener class="org.gradle.intellij.plugin.gradlewrappervalidator.listeners.WrapperValidatorManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

</idea-plugin>
